---
import MainHead from '../components/MainHead.astro';
import Footer from '../components/Footer/index.jsx';
import Nav from '../components/Nav/index.jsx';
import Register from '../components/Authentication/index.jsx'

---

<html lang="en">
	<head>
		<MainHead
			title="Sign Up | KBVE"
			description="Register an Account with KBVE"
		/>
		<style lang="scss">
			.grid {
				display: grid;
				grid-gap: 3rem;
			}
		</style>
	</head>
	<body style={{ paddingTop: '2rem' }}>
		<Nav client:only="preact" />
		<div class="wrapper">
			<h1 class="title mt4 mb4">Register</h1>
			<div class="grid">
        <Register client:only="react" />
			</div>
		</div>
		<Footer client:only="react" />
	</body>
</html>
