---
import MainHead from '../components/MainHead.astro';
import Footer from '../components/Footer/index.jsx';
import Nav from '@c/Nav';
import Profile from '@c/Authentication/Profile';
---

<html lang="en">
	<head>
		<MainHead
			title="Recovery | KBVE"
			description="Forgot your password or need to reset / recover your profile @KBVE."
		/>
		<style lang="scss">
			.grid {
				display: grid;
				grid-gap: 3rem;
			}
		</style>
	</head>
	<body style={{ paddingTop: '2rem' }}>
		<Nav client:only="react" />
		<div class="wrapper">
			<h1 class="title mt4 mb4">Recovery</h1>
			<div class="grid">
        <Profile client:only="react" />
			</div>
		</div>
		<Footer />
	</body>
</html>