---
import MainHead from '../components/MainHead.astro';
import Footer from '../components/Footer/index.jsx';
import Nav from '../components/Nav/index.jsx';
---

<html lang="en">
	<head>
		<MainHead title="Support | KBVE.com" description="KBVE Support Page!" />
		<style lang="scss">
			.heroImg {
				max-height: 24rem;
				object-fit: cover;
				overflow: hidden;

				img {
					width: 100%;
				}
			}

			.bio {
				font-size: var(--f-u1);
				line-height: 2;
			}
		</style>
	</head>
	<body>
		<Nav />
		<div class="wrapper">
			<h1>Support @ KBVE.com</h1>
			<div class="heroImg">
				<img
					width="1400"
					height="350"
					src="https://images.unsplash.com/photo-1653212883731-4d5bc66e0181?auto=format&fit=crop&w=1400&h=350&q=75"
				/>
			</div>
			<div class="bio wrapper wrapper__readable mt8">
				<p>
					Support for KBVE software, services and equipment.
				</p>
				<p>
					<!-- Start of HubSpot Embed Code -->
                    <script type="text/javascript" id="hs-script-loader" async defer src="//js-na1.hs-scripts.com/20854121.js"></script>
                    <!-- End of HubSpot Embed Code -->
				</p>
			</div>
		</div>
		<Footer />
	</body>
</html>
