---
import Core from "@l/theme/core.astro";					///	[IMPORT] -> [CORE]
import SWUP from "@l/theme/swup.astro";					///	[SWUP]

import Discord from '@c/SocialMedia/Discord';           /// Import Discord
import Lottie from '@c/Element/Lottie/';
---
<Core title="KBVE Discord" description="Check out our amazing community of gamers and programmers! Join our Discord!">
	<SWUP>
	<div class="px-4 py-12 space-y-8">
		<style>	
			.kbvehero {
				padding: 8rem;
				display: flex;
				background-color: var(--t-fg);
				background-repeat: no-repeat;
				background-size: cover;
				min-height: 25vw;
				color: white;
				flex-direction: column;
				align-items: center;
				justify-content: center;
			}
			.kbvetext {
				text-shadow:
						3px 3px 0 #000,
						-1px -1px 0 #000,  
						1px -1px 0 #000,
						-1px 1px 0 #000,
						1px 1px 0 #000;
			}
		</style>
		<div style={{ backgroundImage: `url(https://images.unsplash.com/photo-1614680376739-414d95ff43df)` }} class="kbvehero rounded-full shadow-2xl hover:skew-y-6 transform-gpu duration-300">
						<h1 class="title text-9xl kbvetext">Discord</h1>
		</div>
	</div>

	<div class="px-4 py-8 space-y-4">
		<div class="shadow-2xl p-4 bg-offset text-center rounded-3xl ">
			<Lottie json="https://assets1.lottiefiles.com/private_files/lf30_mAfXxk.json" width="320px" client:only="react" />
		</div>
		
		<div class="px-4 space-x-4">
		<div class="shadow-2xl p-4 bg-offset rounded-3xl">
			<Discord client:load width="100%" height="550" />
		</div>
		</div>
		<div class="px-4 space-x-4">
			<div class="shadow-2xl bg-offset rounded-2xl hover:animate-bounce transform-gpu duration-500 ease-in-out">
				<Lottie json="https://assets9.lottiefiles.com/packages/lf20_nivsnvgo.json"  width="300px" client:only="react" />
			</div>
		</div>
	</div>
	</SWUP>
</Core>