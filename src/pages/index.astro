---
import "../styles/index.css";                               //  Import CSS Tailwind
import Features from "@c/Element/Features/Generic/features.astro";
import Header from "@c/Splash/header.astro";
import Intro from "@c/Scene/Intro/intro.astro";
import Splash from "@c/Splash/splash.astro";
import Head from "@c/Header/Head.astro";                    //  Import Header -> Head
import Theme from "@c/Header/Theme.astro";                  //  Import Header -> Theme
import SocialMetaTag from "@c/SocialMedia/MetaTag.astro";   //  Import SocialMedia -> MetaTag
import Footer from "@c/Footer/Foot.astro";                  //  Import Footer -> Foot
---
<html lang="en" class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <head>
    <!-- Head -->                     <Head />
    <!-- Social Media -->             <SocialMetaTag title="KBVE.com - Gaming, Media, FinTech, Coders" description="KiloByte Virtual Enterprise is a collection of users that are straight memers" />
    <!-- initialize theme -->         <Theme />
  </head>
  <body class="h-full overflow-x-hidden text-base bg-default text-default selection:bg-secondary selection:text-white">
      <!-- Header -->                 <Header />
      <!-- Splash -->                 <Splash />
    <div class="px-8 py-32 space-y-24">
      <!-- Intro -->                  <Intro />
      <!-- Features -->               <Features />
    </div>
    <footer class="px-4 divide-y dark:bg-gray-800 dark:text-gray-100">
      <!-- <Footer /> -->             <Footer />
    </footer>
  </body>
</html>