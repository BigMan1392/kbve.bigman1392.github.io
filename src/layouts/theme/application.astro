---

// Refactoring the imports from the Compontents.
//import MainHead from '../components/MainHead.astro';
//import Button from '../components/Button/index.jsx';
//import Footer from '../components/Footer/index.jsx';
import Core from "@l/theme/core.astro";


/// WIP
import SWUP from "@c/Action/Swup/full_swup.astro";



const { content } = Astro.props;
---
<Core content={content}>

	<SWUP>
		<div class="px-4 py-12 space-y-8">
			<div style={{ backgroundImage: `url(${content.img})` }} class="bg-offset hero">
					<h1 class="title">{content.title}</h1>
			</div>
		</div>
		<div class="px-4 py-8 space-y-1 ">
			<div class="shadow-2xl p-4 bg-offset">
				<div class="prose max-w-none prose-p:text-secondary prose-a:text-primary prose-code:text-primary prose-code:before:content-none prose-code:after:content-none prose-headings:text-primary prose-ul:text-secondary">
					<slot />
				</div>
			</div>
		</div>
		
	</SWUP>
</Core>