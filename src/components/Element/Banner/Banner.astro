---
//?     [ELEMENT]       ->      [BANNER]
const { 
        content, 
        bannerConcept = "", 
        data = "null"
    } = Astro.props;

//?     [IMPORT]        ->      [CONCEPTS]
import Sale from "./Concept/Sale.astro";
import Staff from "./Concept/Staff.astro";
import Manga from "./Concept/MangaBanner.astro";
import Newsletter from './Concept/Newsletter.astro';
import ArticleBanner from './Concept/ArticleBanner.astro';
import AnimalSquadBanner from "./Concept/AnimalSquadBanner.astro";
---

{(bannerConcept == "sale") && <Sale />}
{(bannerConcept == "staff") && <Staff />}
{(bannerConcept == "manga") && <Manga />}
{(bannerConcept == "newsletter") && <Newsletter />}
{(bannerConcept == "article") && <ArticleBanner data={data} />}
{(bannerConcept == "animalsquad") && <AnimalSquadBanner />}