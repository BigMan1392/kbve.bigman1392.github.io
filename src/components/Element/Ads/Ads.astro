---
//?             [ADS]
//!             Display advertisements from various companies.
///             {Ezoic}
import Ezoic from "./Ezoic/Ezoic.astro";
import EzoicBanner from "./Ezoic/EzoicBanner.astro";
import EzoicBox from "./Ezoic/EzoicBox.astro";
import EzoicFooter from "./Ezoic/EzoicFooter.astro";
//?             [DATA]
const {
    content,
    template,
    data,
    id,
} = Astro.props;
---
<!-- ADS START -->
{(id == "ezoic" && template == "banner") && <EzoicBanner data={data} />}
{(id == "ezoic" && template == "box") && <EzoicBox data={data} />}
{(id == "ezoic" && template == "footer") && <EzoicFooter data={data} />}

<!-- ADS END -->