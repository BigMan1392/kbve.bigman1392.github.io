---
//?     [YGO] Card Astro Template
//!     Original Design by KissShot-Shinobu
const { 
        title = "H0ly IronGrey Jedi",
        star = 1,       //?   LOOP MISSING
        soul = "earth", // TO-DO
        character_img = "", // Character Image
        type = "dragon",
        attack = 0,
        defense = 0,
        id = "001",
        creator = "KAZUKI TAKAHASHI",
        description,
        } = Astro.props;
---
<section class="">
    <div class="container mx-auto py-10 bg-neutral-800/50">
        <div class="flex  px-4 flex-wrap">
            <div
                class="w-full overflow-hidden flex justify-center items-center  ring-8 ring-[#252436BF] bg-[#B8693E] shadow-lg md:w-1/2 lg:w-1/4">

                <div class="bg-[url('https://i.imgur.com/DNVGE5B.png')] bg-repeat">
                    <div
                        class="  mx-5 mt-2 flex justify-between items-center shadow-md border-2 px-2 pt-1 rounded-[2px] border-opacity-50  border-t-teal-50 border-l-teal-50  border-b-[#000000] border-r-[#000000]">
                        <!-- Title of YGO Card -->
                        <span class="font-Merriweather font-bold text-lg">{title}</span>
                        <span><img src="https://static.wikia.nocookie.net/yugioh/images/a/a1/EARTH.svg" height="30" width="30" alt=""></span>
                    </div>
                    <div class="mx-7 my-1 flex justify-end items-center">
                        <span>
                            <!-- Starball , repeat for each level that is within the Type -->
                            <img src="https://upload.wikimedia.org/wikipedia/commons/7/7b/Starball_Red.svg" height="20" width="20"
                                alt="">
                        </span>
                    </div>
                    <div
                        class="mx-auto rounded-[1px] ring-4 my-1 h-[260px] w-[260px] shadow-lg shadow-black ring-offset-0 ring-[#808080] ">
                        <!-- Character Image -->
                        <img class="object-fill" src="https://i.imgur.com/73iQVzJ.jpg" alt="haru">
                    </div>
                    <div class="mx-7 my-1 flex justify-end items-center">
                        <!-- Character Edition -->
                        <span class="text-xs font-bold font-Merriweather">NECH-EN026</span>
                    </div>
                    <div class="mx-2">
                        <div class="bg-[url('https://i.imgur.com/neIKEeX.png')] bg-repeat">
                            <div class="bg-slate-200 mx-1 my-2 px-1 ring-4 ring-[#FFC85F] font-Merriweather">
                                <h1 class="font-bold uppercase">[{type}]</h1>
                                <p class="text-[10px]">{description}</p>
                                <hr class="h-1 bg-black">
                                <div class="flex justify-end items-center">
                                    <span>ATK/ {attack}</span>
                                    <span>DEF/ {defense}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mx-2 flex justify-between items-center">
                        <!-- NPC ID -->
                        <span class="text-[9px]">{id}</span>
                        <!-- NPC Creator -->
                        <span class="text-[9px]">Â©1996 {creator}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>