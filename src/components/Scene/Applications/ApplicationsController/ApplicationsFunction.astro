---
//*             Appications -> [%FUN] 
//?             Fetch and render each application from the application json as an article.
//?             [DATA]
const { id } = Astro.props;
const data = await fetch('https://kbve.com/application/application.json').then((response) =>  response.json());
if(id != '*'){}
---
{data.map(app => (

    <article class="flex flex-col">
        <a rel="noopener noreferrer" href={app.slug} aria-label="Te nulla oportere reprimique his dolorum">
            <img alt="" class="object-cover w-full h-52 rounded-t-full" src={app.img} loading="lazy">
        </a>
        <div class="flex flex-col flex-1 p-6 bg-offset">
            <a rel="noopener noreferrer" href={app.slug}>
            <span class="text-xs tracking-wider uppercase hover:underline dark:text-orange-400">{app.title}</span>
            <h3 class="flex-1 py-2 font-semibold leading-snug">{app.description}</h3>
            </a>
            <div class="flex flex-wrap p-1 justify-center text-xs ">
                {app.tag.slice(0, 3).map((tags) =>	<a rel="noopener noreferrer" href={`https://kbve.com/t/${tags}`} class="inline-block text-2xl font-semibold sm:text-3xl"><span class="px-2 py-1 text-xs rounded-full bg-orange-500">#{tags}</span></a>)}  
            </div>
        </div>
    </article>
  ))}