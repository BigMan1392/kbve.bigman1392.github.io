---
//*             Appications -> [%FUN] 
//?             Fetch and render each application from the application json as an article.
//?             [IMPORT]
import N from "@n/N.astro";
//?             [DATA]
const { id } = Astro.props;
const data = await fetch('https://kbve.com/application/application.json').then((response) =>  response.json());
---
{data.map(app => (

    <article class="flex flex-col">
        <a rel="noopener noreferrer" href={`https://kbve.com/application/${app.slug}`} aria-label="Te nulla oportere reprimique his dolorum">
            <img alt="" class="object-cover w-full h-52 rounded-t-full" src={app.data.img} loading="lazy">
        </a>
        <div class="flex flex-col flex-1 p-6 bg-offset">
            <a rel="noopener noreferrer" href={`https://kbve.com/application/${app.slug}`}>
            <span class="text-xs tracking-wider uppercase hover:underline dark:text-orange-400">{app.data.title}</span>
            <h3 class="flex-1 py-2 font-semibold leading-snug">{app.data.description}</h3>
            </a>

            <N ns="badge" template="tags" data={app.data.tags} />
            
        </div>
    </article>
  ))}