const posts = (await Astro.glob('../../../pages/project/**/**.mdx')).filter(({ frontmatter }) => !!frontmatter.frontpage);

---

<div class="px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-20" id="projection">
    <div class="grid gap-8 lg:grid-cols-3 sm:max-w-sm sm:mx-auto lg:max-w-full">
        <!-- {Scene -> Projects} -> [START] -->
        {
            posts.map((link) => (


            //   <li>
            //     <a class="flex items-center justify-center w-12 h-12 p-2 border-current rounded-full" href={link.url}>
            //       <span class="sr-only">{link.description}</span>
                  
            //     </a>
            //   </li>

                <div class="overflow-hidden transition-shadow duration-300 bg-white rounded shadow-sm">
                    <img src={link.frontmatter.img} class="object-cover w-full h-64" alt="" />
                    <div class="p-5 border border-t-0">
                    <p class="mb-3 text-xs font-semibold tracking-wide uppercase">
                        <a href="#" class="transition-colors duration-200 text-blue-gray-900 hover:text-deep-purple-accent-700" aria-label="Category" title={link.frontmatter.category}>{link.frontmatter.category}</a>
                        <span class="text-gray-600">-{link.frontmatter.publishDate}</span>
                    </p>
                    <a href={link.frontmatter.url} aria-label="Category" title="Visit the East" class="inline-block mb-3 text-2xl font-bold leading-5 transition-colors duration-200 hover:text-deep-purple-accent-700 darK:">{link.frontmatter.title}</a>
                    <p class="mb-2 text-gray-700">
                        {link.frontmatter.description} Link:
                        {link.frontmatter.slug}
                    </p>
                    <a href="/" aria-label="" class="inline-flex items-center font-semibold transition-colors duration-200 text-deep-purple-accent-400 hover:text-deep-purple-800">Learn more</a>
                    </div>
                </div>


            ))
          }

      <!-- {Scene -> Projects} -> [END] -->
    </div>
  </div>