---
//?     Controller
const {
    id = "",
    template = false,
    data = false,
    className = "",
} = Astro.props;

//?     Controller Imports - Extensions

//?     [OPTIONAL]
import Features from "@c/Element/Features/Generic/features.astro";          /// [FEATUREs]  ->  Plan to be removed.

//?     [INTRO]:Folder
import Intro from "@c/Scene/Intro/intro.astro";                             /// [INTRO]     ->  <Intro> should be in vanillaJS to avoid hydration issues.
import WaitList from "@c/Scene/Intro/WaitList.astro";                       /// [WL]        ->  Wait List for KBVE 
import How from "@c/Scene/Intro/How.astro";                                 /// [How]       ->  How Intro Scene
import IntroReview from "@c/Scene/Intro/IntroReview.astro";                 /// [IR]        ->  Intro Review


//?     [WIP]
import ApplicationsScene from "@c/Scene/Applications/ApplicationsController/ApplicationsScene.astro";
import AssetScene from "@c/Scene/Assets/AssetController/AssetScene.astro";
import ProjectScene from "@c/Scene/Projects/ProjectsController/ProjectScene.astro";
//import BlogScene

//?     [Components]    -> Needs to be migrated to our controller.
import HubspotLiveChat from '@w/HubSpotChat.astro';
import Lottie from "@c/Element/Lottie/Lottie.astro";                        /// [Lottie]    ->  [Int()]
import Collections from "./Collections.astro";

//?     [Library]   ->  [Permanent]
import Redirect from '@c/Action/Redirect';                                  /// [REDIRECT]
import KBVESocial from "@c/SocialMedia/KBVESocial/KBVESocial.astro";

---
{(template == "introreview" && data == false) && <IntroReview />}
{(template == "how" && data == false) && <How />}
{(template == "waitlist" && data == false) && <WaitList />}
{(template == "intro" && data == false) && <Intro />}
{(template == "features" && data == false) && <Features />}
{(template == "redirect") && <Redirect url={data} />}
{(template == "application" && data == false) && <ApplicationsScene />}
{(template == "asset" && data == false) && <AssetScene />}
{(template == "project" && data == false) && <ProjectScene />}
{(template == "livechat" && data == false) && <HubspotLiveChat />}
{(template == "lottie" && data != false) && <Lottie json={data} styler={className} /> }
{(template == "socials") && <KBVESocial />}
{(template == "collections") && <Collections id={id} data={data} />}